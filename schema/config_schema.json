{
    "$ref": "#/$defs/Config",
    "$defs": {
        "Config": {
            "type": "object",
            "properties": {
                "general": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/GeneralConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "parser": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/ParserConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "scanner": {
                    "anyOf": [
                        {
                            "oneOf": [
                                {
                                    "$ref": "#/$defs/FullScannerConfig"
                                },
                                {
                                    "$ref": "#/$defs/NoScannerConfig"
                                },
                                {
                                    "$ref": "#/$defs/ConfigScannerConfig"
                                }
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "classifier": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/ClassifierOptionsParsed"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "metadata": {
                    "anyOf": [
                        {
                            "oneOf": [
                                {
                                    "$ref": "#/$defs/TMDBMetadataConfig"
                                },
                                {
                                    "$ref": "#/$defs/IMDBMetadataConfig"
                                },
                                {
                                    "$ref": "#/$defs/MissingProviderMetadataConfig"
                                }
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "picker": {
                    "anyOf": [
                        {
                            "oneOf": [
                                {
                                    "$ref": "#/$defs/NoLanguagePickerConfig"
                                },
                                {
                                    "$ref": "#/$defs/InteractiveLanguagePickerConfig"
                                }
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "general",
                "parser",
                "scanner",
                "classifier",
                "metadata",
                "picker"
            ],
            "additionalProperties": false
        },
        "GeneralConfig": {
            "type": "object",
            "properties": {
                "target_file": {
                    "type": "string"
                }
            },
            "required": [
                "target_file"
            ],
            "additionalProperties": false
        },
        "ParserConfig": {
            "type": "object",
            "properties": {
                "root_folder": {
                    "type": "string"
                },
                "special": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "type": "string"
                    }
                },
                "video_formats": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true,
                    "default": []
                },
                "ignore_files": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "exception_on_error": {
                    "type": [
                        "boolean",
                        "null"
                    ],
                    "default": true
                }
            },
            "required": [
                "root_folder",
                "special"
            ],
            "additionalProperties": false
        },
        "FullScannerConfig": {
            "type": "object",
            "properties": {
                "scanner_type": {
                    "type": "string",
                    "const": "full"
                }
            },
            "required": [
                "scanner_type"
            ],
            "additionalProperties": false
        },
        "NoScannerConfig": {
            "type": "object",
            "properties": {
                "scanner_type": {
                    "type": "string",
                    "const": "nothing"
                }
            },
            "required": [
                "scanner_type"
            ],
            "additionalProperties": false
        },
        "ConfigScannerConfig": {
            "type": "object",
            "properties": {
                "scanner_type": {
                    "type": "string",
                    "const": "config"
                },
                "config": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/ConfigScannerDict"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "scanner_type",
                "config"
            ],
            "additionalProperties": false
        },
        "ConfigScannerDict": {
            "type": "object",
            "properties": {
                "start_position": {
                    "type": "integer"
                },
                "scan_amount": {
                    "type": "integer"
                },
                "allow_abort": {
                    "type": "boolean"
                },
                "types": {
                    "$ref": "#/$defs/ScannerTypes"
                }
            },
            "additionalProperties": false
        },
        "ScannerTypes": {
            "type": "string",
            "enum": [
                "only_metadata",
                "only_language",
                "both"
            ]
        },
        "ClassifierOptionsParsed": {
            "type": "object",
            "properties": {
                "segment_length": {
                    "$ref": "#/$defs/Timestamp"
                },
                "accuracy_threshold": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 1.0
                },
                "final_accuracy_threshold": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 1.0
                },
                "minimum_scanned": {
                    "type": "number"
                },
                "scan_until": {
                    "type": "number"
                }
            },
            "required": [
                "segment_length",
                "accuracy_threshold",
                "final_accuracy_threshold",
                "minimum_scanned"
            ],
            "additionalProperties": false
        },
        "Timestamp": {
            "type": [
                "string",
                "integer"
            ],
            "minimum": 1,
            "maximum": 86400,
            "pattern": "^\\d{1,2}:\\d{1,2}:\\d{1,2}$"
        },
        "TMDBMetadataConfig": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "tmdb"
                },
                "config": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/TMDBConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "type",
                "config"
            ],
            "additionalProperties": false
        },
        "TMDBConfig": {
            "type": "object",
            "properties": {
                "api_key": {
                    "type": "string"
                },
                "language": {
                    "type": "string"
                },
                "region": {
                    "type": "string"
                }
            },
            "required": [
                "api_key"
            ],
            "additionalProperties": false
        },
        "IMDBMetadataConfig": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "imdb"
                },
                "config": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/IMDBConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "type",
                "config"
            ],
            "additionalProperties": false
        },
        "IMDBConfig": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                }
            },
            "required": [
                "url"
            ],
            "additionalProperties": false
        },
        "MissingProviderMetadataConfig": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "none"
                }
            },
            "required": [
                "type"
            ],
            "additionalProperties": false
        },
        "NoLanguagePickerConfig": {
            "type": "object",
            "properties": {
                "picker_type": {
                    "type": "string",
                    "const": "none"
                }
            },
            "required": [
                "picker_type"
            ],
            "additionalProperties": false
        },
        "InteractiveLanguagePickerConfig": {
            "type": "object",
            "properties": {
                "picker_type": {
                    "type": "string",
                    "const": "interactive"
                },
                "config": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/InteractiveLanguagePickerDict"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "picker_type",
                "config"
            ],
            "additionalProperties": false
        },
        "InteractiveLanguagePickerDict": {
            "type": "object",
            "properties": {
                "entries_to_show": {
                    "type": "integer"
                },
                "show_full_list": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        }
    },
    "$schema": "http://json-schema.org/draft/2020-12/schema#"
}