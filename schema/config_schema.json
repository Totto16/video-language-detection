{
    "$ref": "#/$defs/Config",
    "$defs": {
        "Config": {
            "type": "object",
            "properties": {
                "general": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/GeneralConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "parser": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/ParserConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "scanner": {
                    "anyOf": [
                        {
                            "oneOf": [
                                {
                                    "$ref": "#/$defs/FullScannerConfig"
                                },
                                {
                                    "$ref": "#/$defs/NoScannerConfig"
                                },
                                {
                                    "$ref": "#/$defs/ConfigScannerConfig"
                                }
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "classifier": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/ClassifierOptionsConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "metadata": {
                    "anyOf": [
                        {
                            "oneOf": [
                                {
                                    "$ref": "#/$defs/TMDBMetadataConfig"
                                },
                                {
                                    "$ref": "#/$defs/IMDBMetadataConfig"
                                },
                                {
                                    "$ref": "#/$defs/MissingProviderMetadataConfig"
                                }
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "picker": {
                    "anyOf": [
                        {
                            "oneOf": [
                                {
                                    "$ref": "#/$defs/NoLanguagePickerConfig"
                                },
                                {
                                    "$ref": "#/$defs/InteractiveLanguagePickerConfig"
                                }
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "keybindings": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/KeyBoardConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "general",
                "parser",
                "scanner",
                "classifier",
                "metadata",
                "picker",
                "keybindings"
            ],
            "additionalProperties": false
        },
        "GeneralConfig": {
            "type": "object",
            "properties": {
                "target_file": {
                    "type": "string"
                }
            },
            "required": [
                "target_file"
            ],
            "additionalProperties": false
        },
        "ParserConfig": {
            "type": "object",
            "properties": {
                "root_folder": {
                    "type": "string"
                },
                "special": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "type": "string"
                    }
                },
                "video_formats": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true,
                    "default": []
                },
                "ignore_files": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "exception_on_error": {
                    "type": [
                        "boolean",
                        "null"
                    ],
                    "default": true
                }
            },
            "required": [
                "root_folder",
                "special"
            ],
            "additionalProperties": false
        },
        "FullScannerConfig": {
            "type": "object",
            "properties": {
                "scanner_type": {
                    "type": "string",
                    "const": "full"
                }
            },
            "required": [
                "scanner_type"
            ],
            "additionalProperties": false
        },
        "NoScannerConfig": {
            "type": "object",
            "properties": {
                "scanner_type": {
                    "type": "string",
                    "const": "nothing"
                }
            },
            "required": [
                "scanner_type"
            ],
            "additionalProperties": false
        },
        "ConfigScannerConfig": {
            "type": "object",
            "properties": {
                "scanner_type": {
                    "type": "string",
                    "const": "config"
                },
                "config": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/ConfigScannerDict"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "scanner_type",
                "config"
            ],
            "additionalProperties": false
        },
        "ConfigScannerDict": {
            "type": "object",
            "properties": {
                "start_position": {
                    "anyOf": [
                        {
                            "type": "integer",
                            "deprecated": true
                        },
                        {
                            "$ref": "#/$defs/AdvancedScannerPosition"
                        }
                    ]
                },
                "scan_amount": {
                    "anyOf": [
                        {
                            "type": "integer",
                            "deprecated": true
                        },
                        {
                            "$ref": "#/$defs/AdvancedScannerPosition"
                        }
                    ]
                },
                "allow_abort": {
                    "type": "boolean"
                },
                "types": {
                    "$ref": "#/$defs/ScannerTypes"
                }
            },
            "additionalProperties": false
        },
        "AdvancedScannerPosition": {
            "type": "object",
            "properties": {
                "language": {
                    "type": "integer"
                },
                "metadata": {
                    "type": "integer"
                }
            },
            "additionalProperties": false
        },
        "ScannerTypes": {
            "type": "string",
            "enum": [
                "only_metadata",
                "only_language",
                "both",
                "none"
            ]
        },
        "ClassifierOptionsConfig": {
            "type": "object",
            "properties": {
                "segment_length": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/TimestampCompat"
                        },
                        {
                            "$ref": "#/$defs/Timestamp"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "accuracy": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/AccuracySettingsDict"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "scan_config": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/ScanConfigDict"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "segment_length",
                "accuracy",
                "scan_config"
            ],
            "additionalProperties": false
        },
        "TimestampCompat": {
            "type": "integer",
            "minimum": 1,
            "maximum": 86400,
            "deprecated": true
        },
        "Timestamp": {
            "type": "string",
            "pattern": "^\\d{1,2}:\\d{1,2}:\\d{1,2}$"
        },
        "AccuracySettingsDict": {
            "type": "object",
            "properties": {
                "normal_threshold": {
                    "anyOf": [
                        {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        {
                            "$ref": "#/$defs/AdvancedPercentage"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "final_threshold": {
                    "anyOf": [
                        {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        {
                            "$ref": "#/$defs/AdvancedPercentage"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "use_picker_at_end": {
                    "type": [
                        "boolean",
                        "null"
                    ]
                }
            },
            "additionalProperties": false
        },
        "AdvancedPercentage": {
            "type": "string",
            "pattern": "^(\\d{1,2})(?:\\.(\\d+))?%$"
        },
        "ScanConfigDict": {
            "type": "object",
            "properties": {
                "minimum": {
                    "anyOf": [
                        {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        {
                            "$ref": "#/$defs/AdvancedPercentage"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "maximum": {
                    "anyOf": [
                        {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        {
                            "$ref": "#/$defs/AdvancedPercentage"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "additionalProperties": false
        },
        "TMDBMetadataConfig": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "tmdb"
                },
                "config": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/TMDBConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "type",
                "config"
            ],
            "additionalProperties": false
        },
        "TMDBConfig": {
            "type": "object",
            "properties": {
                "api_key": {
                    "type": "string"
                },
                "language": {
                    "type": "string"
                },
                "region": {
                    "type": "string"
                }
            },
            "required": [
                "api_key"
            ],
            "additionalProperties": false
        },
        "IMDBMetadataConfig": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "imdb"
                },
                "config": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/IMDBConfig"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "type",
                "config"
            ],
            "additionalProperties": false
        },
        "IMDBConfig": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                }
            },
            "required": [
                "url"
            ],
            "additionalProperties": false
        },
        "MissingProviderMetadataConfig": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "none"
                }
            },
            "required": [
                "type"
            ],
            "additionalProperties": false
        },
        "NoLanguagePickerConfig": {
            "type": "object",
            "properties": {
                "picker_type": {
                    "type": "string",
                    "const": "none"
                }
            },
            "required": [
                "picker_type"
            ],
            "additionalProperties": false
        },
        "InteractiveLanguagePickerConfig": {
            "type": "object",
            "properties": {
                "picker_type": {
                    "type": "string",
                    "const": "interactive"
                },
                "config": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/InteractiveLanguagePickerDict"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "picker_type",
                "config"
            ],
            "additionalProperties": false
        },
        "InteractiveLanguagePickerDict": {
            "type": "object",
            "properties": {
                "entries_to_show": {
                    "type": "integer"
                },
                "show_full_list": {
                    "type": "boolean"
                },
                "play_sound": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        },
        "KeyBoardConfig": {
            "type": "object",
            "properties": {
                "abort": {
                    "$ref": "#/$defs/CustomKey"
                }
            },
            "required": [
                "abort"
            ],
            "additionalProperties": false
        },
