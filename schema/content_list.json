{
    "type": "array",
    "items": {
        "anyOf": [
            {
                "$ref": "#/$defs/EpisodeContent"
            },
            {
                "$ref": "#/$defs/SeasonContent"
            },
            {
                "$ref": "#/$defs/SeriesContent"
            },
            {
                "$ref": "#/$defs/CollectionContent"
            }
        ]
    },
    "$defs": {
        "EpisodeContent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "episode"
                },
                "scanned_file": {
                    "$ref": "#/$defs/ScannedFile"
                },
                "description": {
                    "$ref": "#/$defs/EpisodeDescription"
                },
                "language": {
                    "$ref": "#/$defs/Language"
                }
            },
            "required": [
                "type",
                "scanned_file",
                "description",
                "language"
            ],
            "additionalProperties": false
        },
        "ScannedFile": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string",
                    "title": "file path",
                    "description": "The file path of the scanned file / folder"
                },
                "parents": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 0,
                    "maxItems": 3,
                    "uniqueItems": true,
                    "title": "parent folders",
                    "description": "The parent folders of this scanned file / folder"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "file",
                        "folder"
                    ],
                    "title": "file type",
                    "description": "The type of the file: folder or file"
                },
                "stats": {
                    "$ref": "#/$defs/Stats",
                    "title": "file stats",
                    "description": "The stats of this file"
                }
            },
            "required": [
                "path",
                "parents",
                "type",
                "stats"
            ],
            "additionalProperties": false
        },
        "Stats": {
            "type": "object",
            "properties": {
                "checksum": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "mtime": {
                    "type": "number"
                }
            },
            "required": [
                "checksum",
                "mtime"
            ],
            "additionalProperties": false
        },
        "EpisodeDescription": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "season": {
                    "type": "integer",
                    "minimum": 0
                },
                "episode": {
                    "type": "integer",
                    "minimum": 1
                }
            },
            "required": [
                "name",
                "season",
                "episode"
            ],
            "additionalProperties": false
        },
        "Language": {
            "type": "object",
            "properties": {
                "short": {
                    "type": "string"
                },
                "long": {
                    "type": "string"
                }
            },
            "required": [
                "short",
                "long"
            ],
            "additionalProperties": false
        },
        "SeasonContent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "season"
                },
                "scanned_file": {
                    "$ref": "#/$defs/ScannedFile"
                },
                "description": {
                    "$ref": "#/$defs/SeasonDescription"
                },
                "episodes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/EpisodeContent"
                    }
                }
            },
            "required": [
                "type",
                "scanned_file",
                "description",
                "episodes"
            ],
            "additionalProperties": false
        },
        "SeasonDescription": {
            "type": "object",
            "properties": {
                "season": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": [
                "season"
            ],
            "additionalProperties": false
        },
        "SeriesContent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "series"
                },
                "scanned_file": {
                    "$ref": "#/$defs/ScannedFile"
                },
                "description": {
                    "$ref": "#/$defs/SeriesDescription"
                },
                "seasons": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SeasonContent"
                    }
                }
            },
            "required": [
                "type",
                "scanned_file",
                "description",
                "seasons"
            ],
            "additionalProperties": false
        },
        "SeriesDescription": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "year": {
                    "type": "integer",
                    "minimum": 1900
                }
            },
            "required": [
                "name",
                "year"
            ],
            "additionalProperties": false
        },
        "CollectionContent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "collection"
                },
                "scanned_file": {
                    "$ref": "#/$defs/ScannedFile"
                },
                "description": {
                    "type": "string"
                },
                "series": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SeriesContent"
                    }
                }
            },
            "required": [
                "type",
                "scanned_file",
                "description",
                "series"
            ],
            "additionalProperties": false
        }
    },
    "$schema": "http://json-schema.org/draft/2020-12/schema#"
}
